/* 列表 */

.list-item {
  border-bottom: solid #e4e4e4 1px;
  text-align: left;
  padding: 20rpx 40rpx;
}

.list-title {
  margin: 0 0 0 10rpx;
}

.list-item text {
  font-size: 26rpx;
  color: #999;
  line-height: 60rpx;
  display: inline-block;
}

.list-item image {
  width: 45rpx;
  height: 45rpx;
  display: inline-block;
  float: right;
  margin: 15rpx 10rpx 0 0;
}

.btn{
  padding:15rpx;
}

.list-section{
  margin-bottom: 30rpx;
}